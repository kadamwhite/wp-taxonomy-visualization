.selected {
  position: fixed;
  bottom: 0;
  left: 0;
  display: inline-block;
  background: rgba(255,255,255,0.8);
  padding: 1em;

  ul {
    padding: 0;
    margin: 0 0 0.5em 0;
  }

  li {
    display: inline;
    :not(:last-child)::after {
      content: ','
      display: inline;
    }
  }
}
